  //- Toggle
  div(style='position: absolute;left: 587px;top: 404.56px;')
    fieldset.toggle-group
      legend.toggle-group__title Toggle
      .toggle-group__group
        -
          toggleOn = {
          label: 'Получать спецпредложения',
          name: 'mailing',
          checked: true
          }
          toggleOff = {
          label: 'Получать спецпредложения',
          name: 'mailing',
          checked: false
          }
        +toggle(toggleOn)
        +toggle(toggleOff)

  //- Bullet list
  div(style='position: absolute;left: 979px;top: 1196px;')
    .bullet-list-wrapper
      -
        bulletList = [
          'Нельзя с питомцами',
          'Без вечеринок и мероприятий',
          'Время прибытия — после 13:00, а выезд до 12:00'
        ];
      +bullet-list('Bullet list', bulletList)

  //- Info cards
  div(style='position: absolute;left: 140px;top: 1564px;')
    -
      infoCardList = [
        {
        iconUrl: '/img/emoticon.svg',
        title: 'Комфорт',  
        description: 'Шумопоглощающие стены' 
        },
        { 
        iconUrl: '/img/city.svg',
        title: 'Удобство',  
        description: 'Окно в каждой из спален' 
        }
      ];
    .info-card-wrapper 
      each card in infoCardList
        +info-card(card.iconUrl, card.title, card.description)
        .info-card-wrapper__division

  //- Like button
  div(style='position: absolute;left: 587px;top: 534px;')
    fieldset.like-button-group
      legend.like-button-group__title Like button
      .like-button-group__group
        +like-button(2)
