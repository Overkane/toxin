extends ~Layouts/ui-kit-default.pug
include ~Components/text-field/text-field.pug
include ~Components/checkbox-list/checkbox-list.pug
include ~Components/radio/radio.pug
include ~Components/toggle/toggle.pug
include ~Components/bullet-list/bullet-list.pug
include ~Components/info-card/info-card.pug
include ~Components/like-button/like-button.pug

block content
  //- Text field 
  div(style='position: absolute;left: 141px;top: 143px;')
    -
      textField = {
        id: 'text-field',
        label: 'Text field',
        placeholder: 'Email'
      }
    +text-field(textField)

  //- Text field focused
  div(style='position: absolute;left: 141px;top: 227px;')
    -
      textFieldFocused = {
        id: 'text-field-focused',
        label: 'Text field',
        value: 'This is pretty awesome'
      }
    +text-field-focused(textFieldFocused)

  //- Text field masked
  div(style='position: absolute;left: 141px;top: 395px;')
    -
      textFieldMasked = {
        id: 'text-field-masked',
        label: 'Masked text field',
        placeholder: 'ДД.ММ.ГГГГ'
      }
    +text-field(textFieldMasked)

  //- Checkbox
  div(style='position: absolute;left: 587px;top: 143px;')
    -
      checkboxList = [
      {
        name: 'allowSmoking',
        label: 'Можно курить',  
        checked: false 
        },
      { 
        name: 'allowPets', 
        label: 'Можно с питомцами', 
        checked: true 
        },
      { 
        name: 'allowGuests', 
        label: 'Можно пригласить гостей (до 10 человек)', 
        checked: true 
        }
      ];
    .checkbox-list-wrapper
      +checkbox-list('Checkbox buttons', checkboxList)

  //- Rich checkbox
  div(style='position: absolute;left: 587px;top: 1196px;')
    -
      richCheckboxList = [
      {
        name: 'wideCorridor',
        label: 'Широкий коридор',
        description: 'Ширина коридоров в номере не менее 91 см.',  
        checked: false 
        },
      { 
        name: 'invalidHelper', 
        label: 'Помощник для инвалидов', 
        description: 'На 1 этаже вас встретит специалист и проводит до номера.', 
        checked: false 
        }
      ];
    .rich-checkbox-list-wrapper
      +checkbox-list('Rich checkbox buttons', richCheckboxList, true)

  //- Radio
  div(style='position: absolute;left: 587px;top: 313px;')
    fieldset.radio-group
      legend.radio-group__title Radio Buttons
      .radio-group__group
        -
          radioMan = {
          label: 'Мужчина',
          name: 'gender',
          value: 'men',
          checked: true
          }
          radioWoman = {
          label: 'Женщина',
          name: 'gender',
          value: 'woman',
          checked: false
          }
        +radio(radioMan)
        +radio(radioWoman)

  //- div(style='position: absolute;left: 979px;top: 231px;')
