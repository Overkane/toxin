mixin rate-button(name, initStars=0)
  .rate-button
    input.rate-button__input(
      type='radio',
      id=name + "5",
      name=name,
      value='5',
      checked=initStars == 5
    ) 
    label.rate-button__label(for=name + "5")
    input.rate-button__input(
      type='radio',
      id=name + "4",
      name=name,
      value='4',
      checked=initStars == 4
    )
    label.rate-button__label(for=name + "4")
    input.rate-button__input(
      type='radio',
      id=name + "3",
      name=name,
      value='3',
      checked=initStars == 3
    )
    label.rate-button__label(for=name + "3")
    input.rate-button__input(
      type='radio',
      id=name + "2",
      name=name,
      value='2',
      checked=initStars == 2
    )
    label.rate-button__label(for=name + "2")
    input.rate-button__input(
      type='radio',
      id=name + "1",
      name=name,
      value='1',
      checked=initStars == 1
    )
    label.rate-button__label(for=name + "1")
